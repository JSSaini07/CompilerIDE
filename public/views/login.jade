doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Compiler
    link(type='text/css', rel='stylesheet', href='../bootstrap-3.3.6-dist/css/bootstrap.min.css')
    link(type='text/css', rel='stylesheet', href='../css/login.css')
  body
  center
    .loginHeader Login
    .loginForm
      .row.field
        .formLabel.usernameLabel Username
        .formInput.usernameInput 
            input(type='text')
      .row.field
        .formLabel.passwordLabel Password
        .formInput.passwordInput 
            input(type='password')
      .row.errorMessage
        .col-xs-12
      .row.field
        .loginButton.btn.btn-success Login
  script(src='../javascript/jquery-2.2.3.min.js')
  script(src='../javascript/login.js')
